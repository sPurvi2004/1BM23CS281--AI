[7, 0, 6]
[5, 4, 8]

Step 1
[1, 2, 3]
[7, 4, 6]
[5, 0, 8]

Step 2
[1, 2, 3]
[7, 4, 6]
[5, 8, 0]

Step 3
[1, 2, 3]
[7, 4, 6]
[5, 8, 0]

Step 4   (GOAL)
[1, 2, 3]
[7, 8, 6]
[5, 4, 0]
